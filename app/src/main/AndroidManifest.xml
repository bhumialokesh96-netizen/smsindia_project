<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.smsindia.app"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Required runtime permissions (must request at runtime on Android 6+) -->
    <uses-permission android:name="android.permission.SEND_SMS"/>
    <uses-permission android:name="android.permission.READ_SMS"/>
    <uses-permission android:name="android.permission.RECEIVE_SMS"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.READ_PHONE_NUMBERS"/>
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <!-- Declare optional telephony feature (will allow Play to filter non-telephony devices) -->
    <uses-feature android:name="android.hardware.telephony" android:required="false" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:label="SMSIndia"
        android:theme="@style/Theme.SMSIndia">

        <!-- Main activity -->
        <activity android:name=".MainActivity" android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- Broadcast receivers used by SMS sending (status/delivery) -->
        <!-- These receivers are non-exported for safety (only the system may deliver SMS intents). -->
        <receiver android:name=".worker.SmsStatusReceiver" android:exported="false" />
        <receiver android:name=".worker.SmsDeliveredReceiver" android:exported="false" />

        <!-- WorkManager does not require you to manually register its service in manifest
             when using androidx.work:work-runtime; left out intentionally. -->

        <!-- Firebase / Google services metadata:
             Make sure you add app/google-services.json (rename your google-services(2).json -> google-services.json)
             so the Google plugin injects required configuration at build time. -->
        <meta-data android:name="com.google.android.gms.version"
                   android:value="@integer/google_play_services_version"
                   tools:replace="android:value" />

    </application>

</manifest>