<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="4dp"
    android:layout_marginBottom="12dp"
    android:background="@color/white">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_task_title"
            android:text="Send SMS Offer Campaign"
            style="@style/u_text_lg"
            android:textColor="@color/orange_700"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tv_task_desc"
            android:text="Send 20 SMS to users and earn ₹5"
            style="@style/u_text_gray"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="space_between|center_vertical">

            <TextView
                android:id="@+id/tv_task_reward"
                android:text="Reward: ₹5.00"
                style="@style/u_text_gray"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_start_task"
                style="@style/u_btn_orange-sm"
                android:text="Start" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>