<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- ðŸŒž App Theme -->
    <style name="Theme.SMSIndia" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/orange_700</item>
        <item name="android:navigationBarColor">@color/orange_700</item>
        <item name="android:windowBackground">@color/bg_light</item>
    </style>

    <!-- ðŸ§© Text Utilities -->
    <style name="u-text-sm">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="u-text-base">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="u-text-lg">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="u-text-xl">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="u-text-gray">
        <item name="android:textColor">@color/text_gray</item>
    </style>

    <style name="u-text-primary">
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <!-- ðŸŸ  Orange Buttons -->
    <style name="u-btn-orange" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/orange_600</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:paddingVertical">10dp</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Small Orange Button -->
    <style name="u-btn-orange-sm" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:backgroundTint">@color/orange_500</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:paddingVertical">6dp</item>
        <item name="android:paddingHorizontal">12dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">13sp</item>
    </style>

    <!-- ðŸ§± Background Cards -->
    <style name="u-card">
        <item name="android:background">@drawable/bg_rounded_md</item>
        <item name="android:padding">16dp</item>
    </style>

    <!-- ðŸ“ Margin / Padding Helpers -->
    <style name="u-mt-2">
        <item name="android:layout_marginTop">8dp</item>
    </style>
    <style name="u-mb-2">
        <item name="android:layout_marginBottom">8dp</item>
    </style>
    <style name="u-p-4">
        <item name="android:padding">16dp</item>
    </style>

</resources>